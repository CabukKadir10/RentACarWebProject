@page
@using Microsoft.AspNetCore.Mvc.Localization;
@using RentACarProject.Localization;
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@model RentACarProject.Web.Pages.Rental.AddModel
@inject IHtmlLocalizer<RentACarProjectResource> L
@{
    Layout = null;
}
<form method="post" action="@Url.Page("/Rental/Add")">
    @Html.AntiForgeryToken()
    <abp-modal>
        <abp-modal-header title="@L["RentalAdd"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="CreatedRentalDto.CarId"></abp-input>
        </abp-modal-body>
        <abp-modal-body>
            <abp-input asp-for="CreatedRentalDto.RentDate"></abp-input>
        </abp-modal-body>
        <abp-modal-body>
            <abp-input asp-for="CreatedRentalDto.ReturnDate"></abp-input>
        </abp-modal-body>
        <abp-modal-footer buttons="@AbpModalButtons.Save | @AbpModalButtons.Cancel"></abp-modal-footer>
    </abp-modal>
</form>